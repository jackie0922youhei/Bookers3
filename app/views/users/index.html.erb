<h2>Users</h2>
 <table>
   <thead>
     <tr>
       <th>image</th>
       <th>name</th>
       <th></th>
     </tr>
   </thead>
   <% @users.each do |user| %>
   <tbody>
     <tr>
       <td>
         <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
       </td>
       <td>
         <%= user.name %>
       </td>
       <td>
         <%= link_to "Show", user_path(user.id) %>
       </td>
     </tr>
   </tbody>
   <% end %>
 </table>